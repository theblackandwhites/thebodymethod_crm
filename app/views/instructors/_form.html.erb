<%= nested_form_for @instructor do |f| %>
  <% if instructor.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(instructor.errors.count, "error") %> prohibited this instructor from being saved:</h2>

      <ul>
      <% instructor.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div>
    <% if @instructor.avatar? %>
      <%= cl_image_tag(@instructor.avatar.path, { size: '150x150', crop: :thumb, gravity: :face }) %>
    <% end %>
  </div>
  
  <div class="field">
    <%= f.label :avatar %>
    <%= f.attachinary_file_field :avatar %>
  </div>

  <div class="field">
    <%= f.label :first_name %>
    <%= f.text_field :first_name %>
  </div>

  <div class="field">
    <%= f.label :last_name %>
    <%= f.text_field :last_name %>
  </div>

  <div class="field">
    <%= f.label :gender %>
    <%= f.select :gender, options_for_select([ "Female", "Male" ], "Female") %>
  </div>
 

  <div class="field">
    <%= f.label :dob %>
    <%= f.date_select :dob, :start_year=>1900,:end_year=>2017 %>
  </div>

  <div class="field">
    <%= f.label :address %>
    <%= f.text_field :address %>
  </div>

  <div class="field">
    <%= f.label :city %>
    <%= f.text_field :city %>
  </div>

  <div class="field">
    <%= f.label :state %>
    <%= f.text_field :state %>
  </div>

  <div class="field">
    <%= f.label :zipcode %>
    <%= f.text_field :zipcode %>
  </div>

  <div class="field">
    <%= f.label :country %>
    <%= f.text_field :country %>
  </div>

  <div class="field">
    <%= f.label :phone %>
    <%= f.text_field :phone %>
  </div>

  <div class="field">
    <%= f.label :phone2 %>
    <%= f.text_field :phone2 %>
  </div>

  <div class="field">
    <%= f.label :email %>
    <%= f.text_field :email %>
  </div>

  <div class="field">
    <%= f.label :bio %>
    <%= f.text_area :bio %>
  </div>

  <%= f.fields_for :qualifications do |qualification_form| %>
    <%= qualification_form.text_field :title %>
    <%= qualification_form.link_to_remove "Remove this qualification" %>
  <% end %>
  <p><%= f.link_to_add "Add a qualification", :qualifications %></p>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
