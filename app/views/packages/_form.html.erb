<%= form_for(package) do |f| %>
  <% if package.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(package.errors.count, "error") %> prohibited this package from being saved:</h2>

      <ul>
      <% package.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>

  <div class="field">
    <%= f.label :price %>
    <%= f.text_field :price %>
  </div>
  
  <div class="field">
    <%= f.label :number_of_points %>
    <%= f.text_field :number_of_points %>
  </div>

  <div class="field">
    <%= f.label :subscription %>
    <%= f.check_box :subscription %>
  </div>

  <div class="field">
    <%= f.label :subscription_interval_count %>
    <%= f.number_field :subscription_interval_count %>
  </div>

  <div class="field">
    <%= f.label :subscription_interval %>
    <%= f.select :subscription_interval, options_for_select([ "Day", "Month", "Year" ], "Month") %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
